<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="CrossBrowserSuite" parallel="tests" thread-count="2">
    <test name="ChromeTests">
        <parameter name="BrowserType" value="chrome"/>
        <classes>
            <class name="OpenMRS.tests.TC_401_LoginTestWithInvalidData"/>
            <class name="OpenMRS.tests.TC_402_LoginTest"/>
            <class name="OpenMRS.tests.TC_403_Logout"/>
        </classes>
    </test>

    <test name="EdgeTests">
        <parameter name="BrowserType" value="edge"/>
        <classes>
            <class name="OpenMRS.tests.TC_401_LoginTestWithInvalidData"/>
            <class name="OpenMRS.tests.TC_402_LoginTest"/>
            <class name="OpenMRS.tests.TC_403_Logout"/>
        </classes>
    </test>
</suite>